<Window x:Class="CADView.Dialogs.ElementIdInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADView.Dialogs"
        mc:Ignorable="d"
        Title="ElementIdInputDialog" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Margin="5,0,0,0" Content="Enter number(s)/id(s) (comma for separation)"></Label>
            <DockPanel>
                <Label Margin="5,0,0,0" Content="Input:"></Label>
                <TextBox Name="X1" Text="0" Margin="5,5,0,0" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            </DockPanel>
        </StackPanel>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Width="75" Content="Ok" Margin="10" Click="OkButtonClick"></Button>
            <Button Width="75" Content="Cancel" Margin="10" Click="CancelButtonClick"></Button>
        </DockPanel>
    </Grid>
</Window>
