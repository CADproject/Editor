<Window x:Class="CADView.Dialogs.LayersAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADView.Dialogs"
        mc:Ignorable="d"
        Title="Добавить слой" Height="145" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Icon="../Icons/Панель СЛОИ/Добавить_слой.png">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
            <Label HorizontalAlignment="Stretch" Margin="0,0,0,10">Назовите слой</Label>
            <TextBox Margin="0,0,0,10"></TextBox>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Content="Создать" Margin="0,0,10,0" HorizontalAlignment="Stretch"></Button>
                <Button Grid.Column="1" Content="Отменить" Margin="10,0,0,0" HorizontalAlignment="Stretch"></Button>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
