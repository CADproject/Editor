<Window x:Class="CADView.Dialogs.DestroyContourDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Destroy Contour Dialog" Height="130" Width="300" MinHeight="130" MinWidth="300">
    <Grid>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-30,0,0">
            <Label Margin="5,0,0,0" Content="Contour ID:"></Label>
            <TextBox Name="IdTextBox" Text="0" Margin="5,5,0,0" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        </DockPanel>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Width="75" Content="OK" Margin="10" Click="OkButtonClick"></Button>
            <Button Width="75" Content="Cancel" Margin="10" Click="CancelButtonClick"></Button>
        </DockPanel>
    </Grid>
</Window>
